#include <stdio.h>
#include <stdarg.h>
#include "main.h"

/**
 * _printf - Custom printf function.
 * @format: Format string.
 * @...: Variable number of arguments.
 *
 * Return: Number of characters printed (excluding the null byte).
 */
int _printf(const char *format, ...)
{
    va_list args;
    int printed = 0;

    va_start(args, format);

    while (*format)
    {
        if (*format == '%')
        {
            format++;
            if (*format == '\0')
                break;

            if (*format == 'c')
            {
                char c = va_arg(args, int);
                putchar(c);
                printed++;
            }
            else if (*format == 's')
            {
                char *str = va_arg(args, char *);
                if (str == NULL)
                    str = "(null)";
                while (*str)
                {
                    putchar(*str);
                    str++;
                    printed++;
                }
            }
            else if (*format == '%')
            {
                putchar('%');
                printed++;
            }
            else
            {
                putchar('%');
                putchar(*format);
                printed += 2;
            }
        }
        else
        {
            putchar(*format);
            printed++;
        }
        format++;
    }

    va_end(args);
    return printed;
}

int main()
{
    _printf("Hello, %s! My favorite letter is %c. This is a percent sign: %%\n", "World", 'A');
    return 0;
}
